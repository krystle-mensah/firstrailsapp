<h1 class="product_index_title">Products</h1>

<br>

<div class="container-fluid" id="all_products">
	<div class="row">
		<% @products.each do |product| %>
			<div class="col-sm-2 col-md-4">
				<a href="#"><h2><%= product.name %></h2></a>
			    <p><%= product.description %></p>
				<p><%= product.color %></p>
				<%= image_tag(product.image_url, class: "img-responsive") %>
